{
    "manifest_version": 3,
    "name": "Trendly Profile Scraper",
    "version": "1.0.0",
    "description": "Scrape basic data from the currently open Instagram profile page.",
    "action": {
        "default_title": "Scrape IG Profile",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://marketer.modash.io/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://marketer.modash.io/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}